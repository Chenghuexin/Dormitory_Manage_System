<!-- 匯入字體 -->
<style>
	@import url('https://fonts.googleapis.com/css2?family=Abel&family=East+Sea+Dokdo&family=Rubik+Bubbles&display=swap');
</style>


<body class="background">

	<div class="title">
		<div class="student">
			Student
		</div>

		<form action='/application/list' method="get">
			<input id="application" type="submit" name="button" value="宿舍申請" />
			<!-- <a class="application" href = 'javascript:;' onclick="javascript:show()">宿舍申請</a> -->
		</form>

		<form action='/dormitory/list' method="get">
			<input id="information" type="submit" name="button" value="宿舍資訊" />
			<!-- <a class="information" href = 'javascript:;' onclick="javascript:show_dormitory_info()">宿舍資訊</a> -->
		</form>

		<form action='/violation/list' method="get">
			<input id="violation_record" type="submit" name="button" value="違規紀錄" />
			<!-- <a class="Violation_record" href = 'javascript:;' onclick="javascript:show()">違規紀錄查詢</a> -->
		</form>

		<form action='/board/list' method="get">
			<input id="board" type="submit" name="button" value="佈告欄" />
			<!-- <a class = 'board' href = 'javascript:;' onclick="javascript:show_board()">布告欄</a> -->
		</form>

		<div class="line">
			————————————
		</div>

		<div class="address">
			地址:</br>高雄市楠梓區高雄大學路700號
		</div>

		<div class="telephone">
			</br>電話:</br>07-5919000
		</div>

		<div id="boarder_position" style="display: block;">
			<div class='header container'>
				<form class='page-header' action="/board/post" method="get">
					<h1>留言板</h1>
					<!-- <input type='submit' value="發布公告"></input> -->
				</form>
			</div>
			<%= post.ID%>
				<%= post.title%>
					<%= post.content%>
						<div class='comments container'">
                <%for(let comment of comments){%>
                    <li>
                        <%= comment.account %> : <%= comment.text %>
                    </li>
						<%= comment.lastEdit %>
                    <% } %>
			</div>
			<form action = " /board/<%=post.ID%>" method="post">
							<input type='text' name='comment' value=text placeholder="account"></intput>
							<input type="submit" name=''></input>
							</form>
						</div>
</body>

